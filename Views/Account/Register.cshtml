@model PojistakNET.Models.RegisterViewModel
@{
    ViewData["Title"] = "Registrace";
}

<h2>@ViewData["Title"]</h2>
<div class="container vh-50 d-flex mt-4 justify-content-center align-items-center">
    <div class="w-100" style="max-width: 800px;">
        <form asp-action="Register" method="post">
            @Html.AntiForgeryToken()
            <div class="row g-4">
                <!-- zvětší mezeru mezi levou a pravou polovinou -->
                <!-- LEVÁ STRANA -->
                <div class="col-md-6">
                    <h2 class="mb-3">Osobní údaje</h2>
                    <div class="row g-3 mb-4">
                        <div class="col-md-6">
                            <label asp-for="FirstName" class="form-label"></label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="LastName" class="form-label"></label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Username" class="form-label"></label>
                        <input asp-for="Username" class="form-control" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <h2 class="mb-3">Kontaktní údaje</h2>
                    <div class="row g-3 mb-4">
                        <div class="col-md-6">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" type="email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="PhoneNumber" class="form-label"></label>
                            <input asp-for="PhoneNumber" type="tel" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- PRAVÁ STRANA -->
                <div class="col-md-6">
                    <h2 class="mb-3">Adresa</h2>
                    <div class="row g-3 mb-4">
                        <div class="col-md-6">
                            <label asp-for="Street" class="form-label"></label>
                            <input asp-for="Street" class="form-control" />
                            <span asp-validation-for="Street" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="City" class="form-label"></label>
                            <input asp-for="City" class="form-control" />
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mt-4">
                            <label asp-for="Country" class="form-label"></label>
                            <input asp-for="Country" class="form-control" />
                            <span asp-validation-for="Country" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mt-4">
                            <label asp-for="Postcode" class="form-label"></label>
                            <input asp-for="Postcode" class="form-control" />
                            <span asp-validation-for="Postcode" class="text-danger"></span>
                        </div>
                    </div>

                    <h2 class="mb-3">Heslo</h2>
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" type="password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="mb-4">
                        <label asp-for="ConfirmPassword" class="form-label"></label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>

                <!-- SPOLEČNÁ ČÁST (checkbox + submit) -->
                <div class="col-md-12">
                    <div class="form-check mb-3">
                        <input type="checkbox" asp-for="AcceptTerms" class="form-check-input" />
                        <label asp-for="AcceptTerms" class="form-check-label"></label>
                        <span asp-validation-for="AcceptTerms" class="text-danger d-block mt-1"></span>
                    </div>
                    <button type="submit" class="btn btn-primary w-100">Registrovat se</button>
                    <p class="mt-3 text-center">Máte již účet? <a asp-action="Login">Přihlaste se zde</a>.</p>
                </div>
            </div>
        </form>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}