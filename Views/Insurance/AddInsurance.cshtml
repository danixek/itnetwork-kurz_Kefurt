@{
    ViewData["Title"] = "Přidání pojištění";
    var insurerName = ViewBag.InsurerName; // Předané jméno pojištěnce
}

@model PojistakNET.Models.Insurance

<div asp-validation-summary="All" class="text-danger"></div>


<h2>Přidat pojištění k @insurerName</h2>

<form asp-action="add" method="post">

    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="InsurerId" value="@ViewBag.InsurerId" />

    <div class="form-group col-md-6 g-0 mt-3">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="row mt-3">
        <div class="form-group col-md-3">
            <label asp-for="Cost"></label>
            <input asp-for="Cost" class="form-control" />
            <span asp-validation-for="Cost" class="text-danger"></span>
        </div>

        <div class="form-group col-md-3 g-0">
            <label asp-for="ObjectOfInsurance"></label>
            <input asp-for="ObjectOfInsurance" class="form-control" />
            <span asp-validation-for="ObjectOfInsurance" class="text-danger"></span>
        </div>
    </div>

    <div class="row mt-3">
        <div class="form-group col-md-3">
            <label asp-for="ValidFrom"></label>
            <input asp-for="ValidFrom" type="date" class="form-control" />
            <span asp-validation-for="ValidFrom" class="text-danger"></span>
        </div>

        <div class="form-group col-md-3 g-0">
            <label asp-for="ValidUntil"></label>
            <input asp-for="ValidUntil" type="date" class="form-control" />
            <span asp-validation-for="ValidUntil" class="text-danger"></span>
        </div>
    </div>

    <div class="d-flex justify-content-center">
        <button type="submit" class="btn btn-primary ps-4 pe-4 mt-5 font-weight-bold">Uložit</button>
    </div>
</form>
