@{
    // UnderDevelopment Warning message
    var warningMessage = Context.Items["WarningMessage"] as string;
    var path = ViewContext.HttpContext.Request.Path;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Pojišťák.NET</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PojistakNET.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-toggleable-sm navbar-light navbar-themed mb-3">
            <div class="container">

                <!-- Brand: logo + název -->
                <a class="d-flex align-items-center navbar-brand me-4 text-decoration-none" asp-area=""
                    asp-controller="Home" asp-action="Index">
                    <img src="~/img/PojistakNET_logo1.png" alt="Logo Pojišťák.NET"
                        style="width: 40px; height: 40px; object-fit: cover; margin-right: 0.5rem;">
                    <span class="fw-semibold fs-5">Pojišťák.NET</span>
                </a>

                <!-- Toggle Button for Mobile -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Main Navigation -->
                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav mx-auto">
                        <li class="nav-item">
                            <a class="nav-link @(Context.Request.Path.Value?.Contains("insurer") == true ? "active" : "")"
                                asp-area="" asp-controller="insurer" asp-action="insurer">Pojištěnci</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(Context.Request.Path.Value?.Contains("insurance") == true ? "active" : "")"
                                asp-area="" asp-controller="insurance" asp-action="insurance">Pojištění</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(Context.Request.Path.Value?.Contains("articles") == true ? "active" : "")"
                                asp-area="" asp-controller="home" asp-action="articles">Články</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(Context.Request.Path.Value?.Contains("about") == true ? "active" : "")"
                                asp-area="" asp-controller="home" asp-action="about">O nás</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#contact">Kontakt</a>
                        </li>
                    </ul>


                    <!-- Right Actions -->
                    <ul class="navbar-nav ms-auto">
                        @if (User.Identity?.IsAuthenticated ?? false)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="account" asp-action="logout">Odhlásit</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="account" asp-action="login">Přihlásit</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="account" asp-action="register">Registrovat</a>
                            </li>
                        }

                        <!-- Theme toggle button -->
                        <li class="nav-item mt-1">
                            <button id="theme-toggle" class="btn btn-outline-secondary btn-sm" data-bs-tooltip="tooltip"
                                data-bs-placement="bottom" style="border-color: transparent"
                                aria-label="Změnit vzhled stránky" data-bs-original-title="Změnit vzhled stránky">
                                <i class="bi bi-circle-half"></i>
                            </button>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    @* Layout container --> ON/OFF | container-fluid/container *@
    <div class="@ViewData["LayoutContainerClass"] body-container pojistak-section-light" style="padding-top: 90px">
        <div class="container">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Success"]
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert"
                        aria-label="Zavřít"></button>
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["Error"]
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert"
                        aria-label="Zavřít"></button>
                </div>
            }

            @if (!path.StartsWithSegments("/admin") && !string.IsNullOrEmpty(warningMessage))
            {
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    <img src="~/img/warning-icon.png" alt="Warning"
                        style="width: 24px; height: 24px; margin-right: 0.5rem;">
                    @Html.Raw(warningMessage)
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert"
                        aria-label="Zavřít"></button>
                </div>
            }
        </div>

        <main role="main">
            @RenderBody()
        </main>
    </div>
    <section class="pojistak-section-light">
        <div class="container py-5">
            <h3 class="w-100 pb-4">Články</h3>
            <div class="row gy-4">
                <!-- gx-0 = žádné horizontální mezery, gy-1 = vertikální mezery -->

                <div class="col-12 col-md-6 col-lg-4">
                    <div class="article-wrapper">
                        <div class="pojistak-section-dark">
                            <h4>Jak založit nového pojištěnce?</h4>
                            <p>V tomto článku se dozvíte, jak snadno a rychle založit nového pojištěnce v systému Pojišťák.NET.</p>
                            <a href="/home/articles#new-insurer" class="btn btn-primary">Číst více</a>
                        </div>
                    </div>
                </div>

                <div class="col-12 col-md-6 col-lg-4">
                    <div class="article-wrapper">
                        <div class="pojistak-section-dark">
                            <h4>Správa pojištění v Pojišťák.NET</h4>
                            <p>Zjistěte, jak efektivně spravovat pojištění svých klientů pomocí našeho systému.</p>
                            <a href="/home/articles#insurance-management" class="btn btn-primary">Číst více</a>
                        </div>
                    </div>
                </div>

                <div class="col-12 col-md-6 col-lg-4">
                    <div class="article-wrapper">
                        <div class="pojistak-section-dark">
                            <h4>Nejčastější dotazy</h4>
                            <p>Odpovědi na nejčastější dotazy týkající se používání Pojišťák.NET.</p>
                            <a href="/home/articles#faq" class="btn btn-primary">Číst více</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>


    <footer class="footer pojistak-section-dark">
        <div class="container footer-content">
            <h3 class="w-100">Kontakt</h3>
            <div class="row">
            <div class="contact-info col-6">
                
                <p>Hradčanská 12<br>Praha 1<br>410 13</p>
                <a href="https://maps.google.com" class="map-link">Zobrazit na mapě</a>
            </div>
            <div class="other-info col-6">
                <p>Tel: 731 456 789</p>
                <p>Email: info@pojistak.net</p>
            </div>
            </div>
        </div>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/theme-toggler.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
